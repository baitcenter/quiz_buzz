<%= if @quiz do %>
  <h2>Individual players</h2>
  <ul class="qb-players">
    <%= for player <- @quiz.players do %>
      <li class="qb-player"><%= player.name %></li>
    <% end %>
  </ul>

  <h2>Teams</h2>
  <ul class="qb-teams">
    <%= for team <- @quiz.teams do %>
      <li class="qb-team"><%= team.name %></li>
    <% end %>
  </ul>
<% end %>
